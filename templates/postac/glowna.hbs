<div>

  <div class="sheet-header">
  <div class="image-container">
    <img
      class="profile-img"
      src="{{actor.img}}"
      data-edit="img"
      data-action="editImage"
      data-edit="img"
    />
  </div>
  <div class="identity">
    <label>Miano</label>
    <input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>

    <label>Profesja</label>
    <a>{{profesja profesja}}</a>

    <label>PD</label>
    {{formInput systemFields.pd value=system.pd type="number"}}

    
      <label>Cele Osobiste</label>
<textarea name="system.cele_osobiste" rows="4">
  {{system.cele_osobiste}}
</textarea>
  </div>
</div>

  <section class="sheet-body flexrow">

    <div class="left-column">
      {{> "systems/wiedzmin_yze/templates/postac/resources.hbs"}}
      {{> "systems/wiedzmin_yze/templates/postac/conditions.hbs"}}
      
    </div>

    <div class="center-column">
      {{> "systems/wiedzmin_yze/templates/postac/attributes.hbs"}}
    </div>

    <div class="right-column">
      {{> "systems/wiedzmin_yze/templates/postac/talents.hbs"}}
      {{> "systems/wiedzmin_yze/templates/postac/weapons.hbs"}}
      {{> "systems/wiedzmin_yze/templates/postac/equipment.hbs"}}
      
    </div>
    <div class="bottom-row">
      {{> "systems/wiedzmin_yze/templates/postac/notes.hbs"}}
    </div>

  </section>
</div>
