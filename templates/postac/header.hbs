<section class="sheet-header">
  <div class="image-container">
    <img
      class="profile-img"
      src="{{actor.img}}"
      data-edit="img"
      data-action="editImage"
      data-edit="img"
    />
  </div>
  <div class="identity">
    <label>Miano</label>
    <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />

    <label>Profesja</label>
    <a>{{profesja profesja}}</a>

    <label>PD</label>
    {{formInput systemFields.pd value=system.pd type="number"}}

    <label>Cele Osobiste</label>
    {{formInput
      systemFields.cele_osobiste
      value=system.cele_osobiste
      multiline=true
    }}

  </div>
</section>